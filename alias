## Bash
alias sb='source ~/.bash_profile'
alias rm='rm -i'
if [ `uname` == "Linux" ];then
    alias ls='ls --color=auto'
    alias grep='grep --color=auto -P'
else
    alias ls='ls -G'
    alias grep='grep --color=auto -E'
fi


alias ll='ls -l'

#alias rmpyc='rm -f *.pyc'

## node
alias node='node --harmony'

## git
alias gs='git status'
alias gb='git branch'

## tmux
alias tmux='tmux -2'
